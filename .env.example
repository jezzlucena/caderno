# Database (used by docker-compose for PostgreSQL container)
POSTGRES_USER=caderno
POSTGRES_PASSWORD=caderno
POSTGRES_DB=caderno
DATABASE_URL=postgres://caderno:caderno@db:5432/caderno

# Server
PORT=5055
NODE_ENV=development

# JWT
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# Email (for development, use Ethereal: https://ethereal.email/)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@caderno.app

# App URLs
VITE_APP_URL=http://localhost:8085

# Federation (ActivityPub)
# Set to 'true' to enable ActivityPub federation
VITE_FEDERATION_ENABLED=false

# Your server's public domain (without protocol)
# This is used for ActivityPub handles like @username@yourdomain.com
# For local development with ngrok: abc123.ngrok.io
# For production: yourdomain.com
FEDERATION_DOMAIN=localhost:5055

# Your server's public URL (with protocol)
# Must be accessible from the internet for federation to work
# For local development with ngrok: https://abc123.ngrok.io
# For production: https://yourdomain.com
SERVER_URL=http://localhost:5055
